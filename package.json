{
  "name": "aura-lang",
  "displayName": "aura-lang",
  "description": "Support for the Aura programming language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aura-lang.new",
        "title": "Aura: New Project"
      },
      {
        "command": "aura-lang.build",
        "title": "Aura: Build Project"
      },
      {
        "command": "aura-lang.run",
        "title": "Aura: Run Project"
      },
      {
        "command": "aura-lang.fmt",
        "title": "Aura: Fmt Project"
      }
    ],
    "languages": [
        {
            "id": "aura",
            "aliases": ["Aura", "aura"],
            "extensions": [".aura"],
            "configuration": "./language-configuration.json"
        }
    ],
    "grammars": [
        {
          "language": "aura",
          "scopeName": "source.aura",
          "path": "./syntaxes/aura.tmLanguage.json"
        }
      ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
